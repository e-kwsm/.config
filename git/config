[alias]
	ci = commit
	co = checkout
	egrep = grep -EI
	fgrep = grep -FI
	grep = grep -I
	st = status
[color]
	branch = true
	diff = true
	grep = true
	status = true
	ui = auto
[commit]
	gpgsign = true
[core]
	abbrev = 12
	excludesfile = ~/.config/git/ignore
	pager = less -R
[diff]
	algorithm = histogram
[difftool "diffpdf"]
	cmd = diffpdf \"$LOCAL\" \"$REMOTE\"
[grep]
	lineNumber = true
[log]
	date = iso
[merge]
	tool = nvim
	conflictstyle = diff3
[mergetool "nvim"]
	# GIT_MERGETOOL_VIMDIFF_DEBUG
	cmd = "nvim -u NONE -c \"set hidden | leftabove split | leftabove vertical split | 1b | set readonly | wincmd l | leftabove vertical split | 2b | set readonly | wincmd l | 3b | set readonly | wincmd j | 4b | execute 'tabdo windo diffthis' | tabfirst\" \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\""
[pull]
	ff = only
[push]
	default = simple
